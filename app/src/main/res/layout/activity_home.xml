<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".HomeActivity"
    tools:locale="es">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutHeder"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu nombre"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutHeder"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutHeder"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutHeder" />


        />

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="632dp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayoutfotter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutHeder" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/LinearLayoutfotter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    

    

    



</androidx.constraintlayout.widget.ConstraintLayout>